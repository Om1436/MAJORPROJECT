<% layout("/layouts/boilerplate") %>

<div class="row mt-3">
    <h1 class="col-6 offset-3 mb-4">SignUp</h1>
    <div class="col-6 offset-3">
        <form action="/signup" method="post" class="needs-validation" novalidate>
            <div class="mb-3">
                <label for="username" class="from-label">Username</label>
                <input type="text" name="username" placeholder="enter username" class="form-control " id="username" required>
                <div class="valid-feedback">Looks Good</div>
               
            </div>

                <div class="mb-3">
                    <label for="email" class="from-label">Email</label>
                    <input type="email" name="email" placeholder="enter email" class="form-control " id="username" required>
                </div>

                <div class="mb-3">
                    <label for="password" class="from-label">Password</label>
                    <input type="password" name="password" placeholder="enter password" class="form-control " id="username" required>
                </div>

                <button class="btn btn-success">SignUp</button>

        </form>
    </div>
</div>